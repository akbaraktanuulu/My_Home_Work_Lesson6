<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity2">

    <EditText
        android:id="@+id/search"
        android:layout_width="327dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="42dp"
        android:layout_marginTop="202dp"
        android:layout_marginBottom="473dp"
        android:background="@drawable/ic_edit_text"
        android:hint="Search"
        android:paddingHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        app:layout_constraintBottom_toTopOf="@+id/search"
        android:orientation="vertical"
        android:layout_marginTop="138dp"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="229dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/linear"
        android:layout_width="131dp"
        android:layout_height="40dp">

        <TextView
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose the"/>

        <TextView
            android:layout_marginLeft="8dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Food you love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="249dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Catagory"
        android:layout_width="75dp"
        android:layout_height="16dp"/>

    <LinearLayout
        android:layout_marginBottom="320dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="309dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="42dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="327dp"
        android:layout_height="102dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            tools:listitem="@layout/item_food_holder"
            tools:itemCount="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>

    <ImageView
        android:layout_marginStart="329dp"
        android:layout_marginEnd="44dp"
        android:layout_marginTop="71dp"
        android:layout_marginBottom="622dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ic_akbaridze"
        android:layout_width="38dp"
        android:layout_height="38dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>